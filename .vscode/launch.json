    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Nodemon Forma",
            "runtimeExecutable": "nodemon",
            "cwd": "${workspaceFolder}/src",
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch via NPM",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "debug"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Forma",
            "runtimeExecutable": "node",
            "restart": true,
            "cwd": "${workspaceFolder}/src",
            "program": "${workspaceFolder}/src/app.js",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Forever Forma",
            "runtimeExecutable": "forever",
            "restart": true,
            "cwd": "${workspaceFolder}/src",
            "program": "${workspaceFolder}/src/app.js",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Supervisor Forma",
            "runtimeExecutable": "supervisor",
            "restart": true,
            "cwd": "${workspaceFolder}/src",
            "program": "${workspaceFolder}/src/app.js",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}